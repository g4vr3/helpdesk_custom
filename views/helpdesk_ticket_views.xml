<odoo>
    <!-- Vista de Lista (List View) -->
    <record id="view_helpdesk_ticket_list" model="ir.ui.view">
        <field name="name">helpdesk.ticket.list</field>
        <field name="model">helpdesk.ticket</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Tickets">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="assigned_user_id"/>
                <field name="state"/>
                <field name="priority"/>
                <field name="deadline"/>
            </list>
        </field>
    </record>

    <!-- Vista de Formulario (Form View) -->
    <record id="view_helpdesk_ticket_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Ticket de Soporte">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="customer_id"/>
                        <field name="assigned_user_id"/>
                        <field name="state"/>
                        <field name="priority"/>
                        <field name="category_id"/>
                        <field name="deadline"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>