<odoo>
    <!-- Vista de Lista para Tickets -->
    <record id="view_helpdesk_ticket_list" model="ir.ui.view">
        <field name="name">helpdesk.ticket.list</field>
        <field name="model">helpdesk.ticket</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Tickets">
                <field name="name"/>
                <field name="customer_id" widget="many2one" options="{'no_create': True}"/>
                <field name="assigned_user_id"/>
                <field name="state"/>
                <field name="priority"/>
                <field name="deadline"/>
            </list>
        </field>
    </record>

    <!-- Vista de Formulario para Tickets -->
    <record id="view_helpdesk_ticket_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Ticket de Soporte">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="customer_id"/>
                        <field name="assigned_user_id"/>
                        <field name="state"/>
                        <field name="priority"/>
                        <field name="category_id"/>
                        <field name="deadline"/>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Comentarios">
                            <field name="message_ids">
                                <list>
                                    <field name="create_date"/>
                                    <field name="user_id"/>
                                    <field name="message"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Kanban para Tickets -->
    <record id="view_helpdesk_ticket_kanban" model="ir.ui.view">
        <field name="name">helpdesk.ticket.kanban</field>
        <field name="model">helpdesk.ticket</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="state"/>
                <field name="priority"/>
                <field name="assigned_user_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <strong><field name="name"/></strong>
                            <div><field name="state"/></div>
                            <div><field name="priority"/></div>
                            <div><field name="assigned_user_id"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista Calendario para Tickets -->
    <record id="view_helpdesk_ticket_calendar" model="ir.ui.view">
        <field name="name">helpdesk.ticket.calendar</field>
        <field name="model">helpdesk.ticket</field>
        <field name="type">calendar</field>
        <field name="arch" type="xml">
            <calendar string="Tickets" date_start="deadline">
                <field name="name"/>
                <field name="state"/>
                <field name="priority"/>
                <field name="assigned_user_id"/>
            </calendar>
        </field>
    </record>
</odoo>
